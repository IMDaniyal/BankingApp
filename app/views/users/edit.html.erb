<h1>Update profile</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from updating profile:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <br>

    <div>
        <%= f.label :email %>
        <%= f.text_field :email, readonly: true %>
    </div>

    <br>

    <div>
        <%= f.label :home_address %>
        <%= f.text_field :home_address %>
    </div>

    <br>

    <div>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
    </div>

    <br>

    <div>
        <%= f.label :passport_no %>
        <%= f.text_field :passport_no %>
    </div>

    <br>
    <div>
        <%= f.submit "Update" %>
    </div>
<% end %>

<div>
  <br><%= link_to "Back to homepage", root_path %><br>
</div>