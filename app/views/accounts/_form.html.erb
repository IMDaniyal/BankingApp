<%= form_with(model: account) do |form| %>
  <% if account.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :account_type, "Select Account Type:", style: "display: block" %>
    <%= form.select :account_type_id, options_for_select(account_type.map{ |v| [v.name,v.id] }) %>
  </div>

  <br>

  <div>
    <%= form.label :pin, style: "display: block" %>
    <%= form.password_field :pin, maxlength: 4, minlength: 4, size: 8 %>
  </div>

  <%= form.hidden_field :user_id, value: Current.user.id %>
  
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
