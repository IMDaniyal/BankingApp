<h1> Transaction </h1>
<div id="<%= dom_id @transaction %>">
  <p>
    <strong>Amount:</strong>
    <%= @transaction.amount %>
  </p>

  <p>
    <strong>Source:</strong>
    <%= @transaction.source %>
  </p>

  <p>
    <strong>Sender:</strong>
    <%= @transaction.sender %>
  </p>

  <p>
    <strong>Receiver:</strong>
    <%= @transaction.receiver %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= @transaction.created_at %>
  </p>

</div>

<div>
  <%= link_to "Back to account", account_path(@transaction.account_id) %> |
  <%= link_to "Back to homepage", root_path %><br>
</div>